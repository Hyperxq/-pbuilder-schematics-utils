{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types"],
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "types": ["node"]
  },
  "exclude": ["node_modules"]
}
